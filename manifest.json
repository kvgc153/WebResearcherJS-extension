{
	"manifest_version": 2,
	"name": "WebResearcherJS",
	"version": "7.0.3",
	"description": "https://github.com/kvgc153/WebResearcherJS-extension",

	"permissions": [
		"<all_urls>", "activeTab", "tabs","contextMenus", "storage"
	],

	"browser_action": {
		"default_title": "WebResearcherJS",
		"browser_style": true
	},

	"applications": {
		"gecko": {
			"id": "test@webresearcher.io"
		}
	},
	"background": {
	"scripts": ["webresearcher/background.js"]
},
"content_scripts": [
  {
    "matches": ["*://*/*"],
    "js": ["webresearcher/contentScript.js"],
	"run_at":"document_start"
  }
],
"options_ui": {
    "page": "webresearcher/options.html",
	"browser_style": true
  }
}
